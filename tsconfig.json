{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "lib": [
      "es6",
      "DOM"
    ],
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.js",
    "./src/**/*.ts",
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs"
  }
}